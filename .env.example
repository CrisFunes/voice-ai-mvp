# Copia este archivo como .env y completa valores reales.
# IMPORTANTE: no commitear nunca .env

# =============================
# LLM / STT / TTS
# =============================
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# Provider selection
USE_ANTHROPIC=true
USE_OPENAI_FALLBACK=false

# =============================
# Twilio (Voice Webhooks)
# =============================
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=

# Flask
FLASK_SECRET_KEY=change-me-in-production

# =============================
# App / DB
# =============================
# "mock" (tests/dev) o "real" (DB real)
SERVICE_MODE=real

# Default: sqlite:///./demo_v2.db
# DATABASE_URL=sqlite:///./demo_v2.db
# DATABASE_URL=postgresql+psycopg2://user:pass@host:5432/dbname

# =============================
# (Opcional) Ajustes RAG/embeddings
# =============================
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
TOP_K_RESULTS=3
LLM_TEMPERATURE=0.3
LLM_MAX_TOKENS=1000
